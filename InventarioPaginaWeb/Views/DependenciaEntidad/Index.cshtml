@model IEnumerable<InventarioPaginaWeb.Models.DependenciaEntidad>

    <h1>Dependencia/Entidad</h1>

    <p>
        <a asp-action="Create"> Nueva Dependencia |</a>
        <a href="/Inventario/Index"> Regresar al Inventario |</a>
        <a href="/Home/Index"> Regresar a Inicio |</a>

        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

        @if (TempData["message"] != null)
        {
            <div id="alert-div" class="alert alert-success alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>@TempData["message"]</strong>
            </div>

            <script type="text/javascript">
                $(document).ready(function () {
                    setTimeout(function () {
                        $("#alert-div").fadeTo(500, 0.5).slideUp("slow", function () {
                            $(this).remove();
                        })
                    }, 3000);
                });
            </script>
        }

        <script type="text/javascript">

        </script>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdDependenciaEntidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UbicacionSistema)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UbicacionFisica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Departamento)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdDependenciaEntidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UbicacionSistema)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UbicacionFisica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdDependenciaEntidad">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdDependenciaEntidad">Detalles</a> |
                        <a data-id="@item.IdDependenciaEntidad @item.UbicacionSistema @item.UbicacionFisica @item.Departamento" asp-action="Delete" asp-route-id="@item.IdDependenciaEntidad">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
