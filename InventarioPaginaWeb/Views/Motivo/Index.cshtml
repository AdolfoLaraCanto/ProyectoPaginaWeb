@model IEnumerable<InventarioPaginaWeb.Models.Motivo>

    <h1>Motivo</h1>
    <p>
        <a asp-action="Create"> Nuevo Motivo |</a>
        <a href="/Inventario/Index"> Regresar al Inventario |</a>
        <a href="/Home/Index"> Regresar a Inicio |</a>
    </p>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

@if (TempData["message"] != null)
{
    <div id="alert-div" class="alert alert-success alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>@TempData["message"]</strong>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                $("#alert-div").fadeTo(500, 0.5).slideUp("slow", function () {
                    $(this).remove();
                })
            }, 3000);
        });
    </script>
}

<script type="text/javascript">

</script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMotivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreMotivo)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMotivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMotivo)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMotivo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdMotivo">Detalles</a> |
                <a data-id="@item.IdMotivo @item.NombreMotivo " asp-action="Delete" asp-route-id="@item.IdMotivo" id="deleteMe">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>

</table>
