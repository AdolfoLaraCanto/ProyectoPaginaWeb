@model InventarioPaginaWeb.Models.Motivo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Motivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMotivo" />
            <div class="form-group">
                <label asp-for="IdMotivo" class="control-label"></label>
                <input asp-for="IdMotivo" class="form-control" />
                <span asp-validation-for="IdMotivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreMotivo" class="control-label"></label>
                <input asp-for="NombreMotivo" class="form-control" />
                <span asp-validation-for="NombreMotivo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

